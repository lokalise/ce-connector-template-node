{
  "name": "@lokalise/template-connector",
  "private": true,
  "version": "1.0.0",
  "description": "Template connector for Lokalise Content type app engine",
  "main": "server.js",
  "scripts": {
    "copy:config": "cpy --rename=.env .env.default ./",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ci": "npm run copy:config && npm run lint && npm run test:coverage",
    "lint": "eslint .",
    "lint:fix": "eslint .  --ext .ts --fix",
    "format": "prettier --write .",
    "start:dev": "cross-env NODE_ENV=development ts-node -r dotenv/config src/server.ts",
    "start:dev:watch": "cross-env NODE_ENV=development nodemon -r dotenv/config src/server.ts",
    "start:dev:watch:alternative": "cross-env NODE_ENV=development ts-node-dev -r dotenv/config src/server.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": "Lokalise",
  "license": "Apache-2.0",
  "dependencies": {
    "@bugsnag/js": "^8.1.2",
    "@fastify/awilix": "^6.0.1",
    "@lokalise/backend-http-client": "^2.4.0",
    "@lokalise/fastify-extras": "^25.2.0",
    "@lokalise/node-core": "^13.1.0",
    "awilix": "^12.0.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "fastify-custom-healthcheck": "^3.1.0",
    "fastify-graceful-shutdown": "^4.0.1",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "newrelic": "^12.8.0",
    "pino": "^9.5.0",
    "undici": "^6.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.1.5",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-vitest": "0.3.22",
    "mockttp": "^3.15.4",
    "nodemon": "^3.1.7",
    "pino-pretty": "^13.0.0",
    "prettier": "3.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=20"
  }
}
