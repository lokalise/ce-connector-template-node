{
    "name": "@lokalise/template-connector",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "description": "Template connector for Lokalise Content type app engine",
    "main": "server.js",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "copy:config": "node -e \"const fs=require('fs');fs.copyFileSync('.env.default','.env');console.log('Copied .env.default -> .env');\"",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "test:ci": "npm run copy:config && npm run test:coverage && npm run lint",
        "lint": "biome check && tsc",
        "lint:fix": "biome check --write",
        "start:dev": "cross-env NODE_ENV=development node --env-file=.env src/server.ts",
        "start:dev:watch": "cross-env NODE_ENV=development node watch --env-file=.env src/server.ts",
        "start:prod": "tsc && cross-env NODE_ENV=production node --env-file-if-exists=.env dist/src/server.js",
        "start:prod:newrelic": "tsc && cross-env NODE_ENV=production node --experimental-loader newrelic/esm-loader.mjs -r newrelic --env-file-if-exists=.env dist/src/server.js",
        "free-ports": "npx cross-port-killer 3000"
    },
    "keywords": [],
    "author": "Lokalise",
    "license": "Apache-2.0",
    "dependencies": {
        "@bugsnag/js": "^8.4.0",
        "@fastify/awilix": "^8.0.0",
        "@lokalise/api-contracts": "^5.4.0",
        "@lokalise/backend-http-client": "^7.2.0",
        "@lokalise/connector-api-contracts": "^1.5.1",
        "@lokalise/fastify-api-contracts": "^4.2.1",
        "@lokalise/fastify-extras": "^30.2.0",
        "@lokalise/node-core": "^14.4.1",
        "awilix": "^12.0.5",
        "awilix-manager": "^6.1.0",
        "fastify": "^5.6.0",
        "fastify-graceful-shutdown": "^5.0.0",
        "fastify-metrics": "^12.1.0",
        "fastify-plugin": "^5.0.1",
        "fastify-type-provider-zod": "^6.0.0",
        "newrelic": "^13.3.2",
        "opinionated-machine": "^4.0.0",
        "pino": "^9.11.0",
        "undici": "^7.15.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.4",
        "@lokalise/biome-config": "^3.1.0",
        "@lokalise/tsconfig": "^3.0.0",
        "@types/newrelic": "^9.14.8",
        "@types/node": "^24.5.2",
        "@vitest/coverage-v8": "^3.2.4",
        "cross-env": "^10.0.0",
        "mockttp": "^4.1.0",
        "pino-pretty": "^13.1.1",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=24.5.0"
    }
}
