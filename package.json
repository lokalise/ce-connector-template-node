{
  "name": "@lokalise/template-connector",
  "private": true,
  "version": "1.0.0",
  "description": "Template connector for Lokalise Content type app engine",
  "main": "server.js",
  "scripts": {
    "copy:config": "cpy --rename=.env .env.default ./",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ci": "npm run copy:config && npm run lint && npm run test:coverage",
    "lint": "eslint .",
    "lint:fix": "eslint .  --ext .ts --fix",
    "format": "prettier --write .",
    "start:dev": "cross-env NODE_ENV=development ts-node -r dotenv/config src/server.ts",
    "start:dev:watch": "cross-env NODE_ENV=development ts-node-dev -r dotenv/config src/server.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": "Lokalise",
  "license": "Apache-2.0",
  "dependencies": {
    "@bugsnag/js": "^7.21.0",
    "@fastify/awilix": "^3.1.0",
    "@lokalise/fastify-extras": "^12.0.0",
    "@lokalise/node-core": "^6.2.0",
    "awilix": "^8.0.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.21.0",
    "fastify-custom-healthcheck": "^3.1.0",
    "fastify-graceful-shutdown": "^3.5.1",
    "fastify-metrics": "^10.3.0",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.1.9",
    "newrelic": "^10.6.2",
    "pino": "^8.15.0",
    "undici": "^5.23.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/node": "^18.17.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitest/coverage-v8": "^0.34.2",
    "cpy-cli": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vitest": "^0.2.8",
    "mockttp": "^3.9.1",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.2"
  },
  "engines": {
    "node": ">=18"
  }
}
