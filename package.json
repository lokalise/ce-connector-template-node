{
  "name": "@lokalise/template-connector",
  "private": true,
  "version": "1.0.0",
  "description": "Template connector for Lokalise Content type app engine",
  "main": "server.js",
  "scripts": {
    "copy:config": "cpy --rename=.env .env.default ./",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ci": "npm run copy:config && npm run lint && npm run test:coverage",
    "lint": "eslint .",
    "lint:fix": "eslint .  --ext .ts --fix",
    "format": "prettier --write .",
    "start:dev": "cross-env NODE_ENV=development ts-node -r dotenv/config src/server.ts",
    "start:dev:watch": "cross-env NODE_ENV=development nodemon -r dotenv/config src/server.ts",
    "start:dev:watch:alternative": "cross-env NODE_ENV=development ts-node-dev -r dotenv/config src/server.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": "Lokalise",
  "license": "Apache-2.0",
  "dependencies": {
    "@bugsnag/js": "^7.22.4",
    "@fastify/awilix": "^5.0.0",
    "@lokalise/fastify-extras": "^16.4.0",
    "@lokalise/node-core": "^9.9.0",
    "awilix": "^10.0.1",
    "dotenv": "^16.4.4",
    "fastify": "^4.26.1",
    "fastify-custom-healthcheck": "^3.1.0",
    "fastify-graceful-shutdown": "^3.5.1",
    "fastify-metrics": "^10.6.0",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.1.9",
    "mockhttp": "^0.0.1",
    "newrelic": "^11.10.4",
    "pino": "^8.18.0",
    "undici": "^6.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^1.2.2",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vitest": "^0.3.22",
    "mockttp": "^3.10.1",
    "nodemon": "^3.0.3",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=20"
  }
}
