{
  "name": "@lokalise/template-connector",
  "private": true,
  "version": "1.0.0",
  "description": "Template connector for Lokalise Content type app engine",
  "main": "server.js",
  "scripts": {
    "copy:config": "cpy --rename=.env .env.default ./",
    "build": "tsc",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:ci": "npm run copy:config && npm run lint && npm run test:coverage",
    "lint": "eslint .",
    "lint:fix": "eslint .  --ext .ts --fix",
    "format": "prettier --write .",
    "start:dev": "cross-env NODE_ENV=development ts-node -r dotenv/config src/server.ts",
    "start:dev:watch": "cross-env NODE_ENV=development ts-node-dev -r dotenv/config src/server.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": "Lokalise",
  "license": "Apache-2.0",
  "dependencies": {
    "@bugsnag/js": "^7.20.2",
    "@fastify/awilix": "^3.1.0",
    "@lokalise/fastify-extras": "^9.0.0",
    "@lokalise/node-core": "^5.8.1",
    "awilix": "^8.0.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.18.0",
    "fastify-custom-healthcheck": "^3.1.0",
    "fastify-graceful-shutdown": "^3.4.0",
    "fastify-metrics": "^10.3.0",
    "fastify-plugin": "^4.5.0",
    "fastify-type-provider-zod": "^1.1.9",
    "newrelic": "^10.3.2",
    "pino": "^8.14.1",
    "undici": "^5.22.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.18",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "cpy-cli": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "mockttp": "^3.7.5",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18"
  }
}
